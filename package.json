{
  "name": "mls-vls-syndicator",
  "version": "1.1.0",
  "description": "Desktop application that syndicates MLS real estate listings to VLS Homes automatically using browser automation",
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "start": "npm run build && npm run electron",
    "package": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "build": {
    "appId": "com.mls-vls-syndicator",
    "productName": "MLS VLS Syndicator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "Erichalfonso",
      "repo": "mls-vls-syndicator",
      "releaseType": "release"
    }
  },
  "author": "Erich Alfonso",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Erichalfonso/mls-vls-syndicator"
  },
  "homepage": "https://github.com/Erichalfonso/mls-vls-syndicator#readme",
  "keywords": [
    "mls",
    "real-estate",
    "automation",
    "electron",
    "puppeteer",
    "vls",
    "listing-syndication"
  ],
  "dependencies": {
    "electron-updater": "^6.1.0",
    "electron-store": "^8.1.0",
    "puppeteer": "^23.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vitest": "^4.0.17"
  }
}
